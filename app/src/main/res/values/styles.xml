<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Fonts-->
    <style name="Sanfransisco.Regular" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="Sanfransisco.Regular.Italic" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/regularitalic</item>
    </style>

    <style name="Sanfransisco.Bold" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/bold</item>
    </style>

    <style name="Sanfransisco.Bold.Italic" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/bolditalic</item>
    </style>

    <style name="Sanfransisco.Light" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/light</item>
    </style>

    <style name="Sanfransisco.Light.Italic" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/lightitalic</item>
    </style>

    <style name="Sanfransisco.Medium" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/medium</item>
    </style>

    <style name="Sanfransisco.SemiBold" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/semibold</item>
    </style>

    <style name="Sanfransisco.Thin" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/thin</item>
    </style>

    <style name="HancinSubmitButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/hancin_red_red_submit_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:layout_marginBottom">@dimen/_8sdp</item>
        <item name="fontFamily">@font/semibold</item>
    </style>

    <style name="HancinWhiteSubmitButton" parent="HancinSubmitButton">
        <item name="android:background">@drawable/hancin_white_submit_button</item>
        <item name="android:textColor">@color/color_primary</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/roundrect_top</item>
    </style>

    <style name="BaseHancinBottomAlert" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="HancinBottomAlertTheme" parent="BaseHancinBottomAlert" />

    <style name="HancinBottomAlertThemeWithInput" parent="BaseHancinBottomAlert">
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="HancinDatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/color_primary</item>
        <!--selected Item color-->
        <item name="colorControlActivated">@color/color_primary</item>
        <!-- Highlight item color-->
        <item name="colorControlHighlight">@color/color_primary</item>
        <!-- Ok Cancel Color-->
        <item name="android:textColor">@color/color_primary</item>
    </style>

    <style name="filterDialogTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="NoBorderEditTextBold">
        <item name="android:background">@null</item>
        <item name="android:paddingTop">@dimen/_16sdp</item>
        <item name="android:paddingStart">@dimen/_16sdp</item>
        <item name="android:paddingEnd">@dimen/_16sdp</item>
        <item name="fontFamily">@font/semibold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="NoBorderEditText">
        <item name="android:background">@null</item>
        <item name="android:padding">@dimen/_16sdp</item>
        <item name="fontFamily">@font/regular</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>