<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_16sdp">

        <TextView
            android:id="@+id/tv_login_title"
            style="@style/Sanfransisco.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_14sdp"
            android:text="@string/app_initial"
            android:textColor="@color/color_primary"
            android:textSize="@dimen/_32ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_login_desc"
            style="@style/Sanfransisco.Regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:text="@string/user_registration"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_login_title" />

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_30sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_login_desc">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ly_baptism_information"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Sanfransisco.Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/baptis" />

                    <RadioGroup
                        android:id="@+id/rb_baptism_information"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:orientation="horizontal">

                    </RadioGroup>

                    <View
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="0.5dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:background="@color/greyAAAAAA" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_baptism_church"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Sanfransisco.Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/baptis_place" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_batpism_church"
                        style="@style/Sanfransisco.Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:background="@drawable/edittext_background_grey_border"
                        android:hint="@string/baptis_place"
                        android:paddingLeft="@dimen/_16sdp"
                        android:paddingTop="@dimen/_12sdp"
                        android:paddingRight="@dimen/_16sdp"
                        android:paddingBottom="@dimen/_12sdp"
                        android:singleLine="true" />

                    <View
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="0.5dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:background="@color/greyAAAAAA" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_baptism_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Sanfransisco.Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/baptis_time" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_baptism_time"
                        style="@style/Sanfransisco.Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:background="@drawable/edittext_background_grey_border"
                        android:drawableEnd="@drawable/ic_baseline_today_24"
                        android:editable="false"
                        android:hint="@string/baptism_time_hint"
                        android:paddingLeft="@dimen/_16sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingRight="@dimen/_16sdp"
                        android:paddingBottom="@dimen/_10sdp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_holy_spirit_baptism"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Sanfransisco.Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/baptis_holy_spirit" />

                    <RadioGroup
                        android:id="@+id/rb_holy_spirit_baptism_information"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:orientation="horizontal">

                    </RadioGroup>

                    <View
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="0.5dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:background="@color/greyAAAAAA" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_church_origin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Sanfransisco.Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/church_origin" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_church_origin"
                        style="@style/Sanfransisco.Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:background="@drawable/edittext_background_grey_border"
                        android:hint="@string/church_origin_hint"
                        android:paddingLeft="@dimen/_16sdp"
                        android:paddingTop="@dimen/_12sdp"
                        android:paddingRight="@dimen/_16sdp"
                        android:paddingBottom="@dimen/_12sdp"
                        android:singleLine="true" />

                    <TextView
                        android:id="@+id/tv_chruch_origin_error_message"
                        style="@style/Sanfransisco.Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:text="@string/church_origin_error_message"
                        android:textColor="@color/red_C2576A"
                        android:visibility="gone" />

                    <View
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="0.5dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:background="@color/greyAAAAAA" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_reason_for_moving_church"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Sanfransisco.Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/reason_moving_church" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_reason_for_moving_church"
                        style="@style/Sanfransisco.Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:background="@drawable/edittext_background_grey_border"
                        android:hint="@string/reason_moving_church"
                        android:paddingLeft="@dimen/_16sdp"
                        android:paddingTop="@dimen/_12sdp"
                        android:paddingRight="@dimen/_16sdp"
                        android:paddingBottom="@dimen/_12sdp"
                        android:singleLine="true" />

                    <TextView
                        android:id="@+id/tv_reason_moving_church_error_message"
                        style="@style/Sanfransisco.Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:text="@string/reason_moving_church_error_message"
                        android:textColor="@color/red_C2576A"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>